@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-label">
                <label asp-for="Seller.Name" class="col-form-label"></label>
                <input asp-for="Seller.Name" class="form-check" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.Email" class="col-form-label"></label>
                <input asp-for="Seller.Email" class="form-check" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.BaseSalary" class="col-form-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-check" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.BirthDate" class="col-form-label"></label>
                <input asp-for="Seller.BirthDate" class="form-check" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-label">
                <label asp-for="Seller.Department" class="col-form-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-check"></select>
            </div>
            <div class-form-check>
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
